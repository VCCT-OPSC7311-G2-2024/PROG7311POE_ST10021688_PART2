@model PROG7311POE.Models.User

<h2>Delete User</h2>

@* hold user id for db reference but do not show user *@
<input type="hidden" asp-for="UserID" />

<p>Are you sure you want to delete this user?</p>
<dl class="row">
  
    <dt class="col-sm-2">Username</dt>
    <dd class="col-sm-10">@Model.Username</dd>

    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Email</dd>

    <dt class="col-sm-2">Password</dt>
    <dd class="col-sm-10">@Model.Password</dd>
</dl>

<form asp-action="DeleteConfirmed" asp-route-id="@Model.UserID" method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
